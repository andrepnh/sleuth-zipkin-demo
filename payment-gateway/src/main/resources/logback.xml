<configuration>
  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
      <pattern>%d{"yyyy-MM-dd'T'HH:mm:ss.SSS"} [%mdc] [%thread] %-5level %logger{36=5} - %msg%n</pattern>
    </encoder>
  </appender>

  <logger name="com.github.andrepnh.tracing" level="debug" additivity="false">
    <appender-ref ref="STDOUT" />
  </logger>

  <root level="INFO">
    <appender-ref ref="STDOUT" />
  </root>
</configuration>
